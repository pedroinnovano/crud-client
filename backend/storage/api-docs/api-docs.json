                    "Relatórios"
                ],
                "summary": "Distribuição percentual por estado",
                "operationId": "41416e35f7497d18d9120266fec9645a",
                "responses": {
                    "200": {
                        "description": "Percentual de clientes por estado"
                    }
                }
            }
